{
  "name": "iris",
  "version": "0.2.0",
  "description": "Iris is a comfortable WYSIWYG Markdown note-taking app",
  "main": "./out/main/index.js",
  "author": "alexwkleung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexwkleung/Iris/issues"
  },
  "homepage": "https://github.com/alexwkleung/Iris#readme",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "taze": "npx taze",
    "taze:write": "npx taze -w"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "@milkdown/core": "^7.2.1",
    "@milkdown/preset-commonmark": "^7.2.1",
    "@milkdown/preset-gfm": "^7.2.1",
    "@napi-rs/cli": "^2.15.2",
    "electron-updater": "^5.3.0",
    "fs-mod": "./fs-mod"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@types/node": "16.18.21",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "electron": "^22.3.2",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.21",
    "eslint": "^8.40.0",
    "typescript": "^4.9.5",
    "vite": "^4.2.1"
  }
}
