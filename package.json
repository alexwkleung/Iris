{
  "name": "iris",
  "version": "0.3.0-dev.1",
  "productName": "Iris",
  "description": "A comfortable note-taking app powered by Markdown",
  "main": "./out/main.js",
  "type": "module",
  "author": "alexwkleung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexwkleung/Iris/issues"
  },
  "homepage": "https://github.com/alexwkleung/Iris#readme",
  "scripts": {
    "dev": "npm run build && concurrently \"vite serve .\" \"electron .\" \"node ./cli.js\"",
    "build": "vite build && tsc",
    "preview": "vite preview",
    "test": "vitest",
    "electron": "electron .",
    "build:mac-arm64": "npm run build && electron-builder --mac --arm64 --config",
    "build:mac-x64": "npm run build && electron-builder --mac --x64 --config",
    "build:mac-universal": "npm run build && electron-builder --mac --universal --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "build:win": "npm run build && electron-builder --win --config",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier": "prettier . --write",
    "napi:create": "napi new",
    "update:deps": "npx taze"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.8.1",
    "@codemirror/commands": "^6.2.4",
    "@codemirror/lang-markdown": "^6.2.0",
    "@codemirror/language": "^6.8.0",
    "@codemirror/language-data": "^6.3.1",
    "@codemirror/state": "^6.2.1",
    "@codemirror/view": "^6.14.0",
    "dompurify": "^3.0.4",
    "electron-context-menu": "^3.6.1",
    "electron-window-state": "^5.0.3",
    "fs-mod": "./fs-mod",
    "mermaid": "^10.2.4",
    "rehype-highlight": "^6.0.0",
    "rehype-katex": "^6.0.3",
    "rehype-mermaidjs": "^1.0.1",
    "rehype-stringify": "^9.0.3",
    "remark-emoji": "^3.1.2",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "remark-parse": "^10.0.2",
    "remark-rehype": "^10.1.0",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "@napi-rs/cli": "^2.15.2",
    "@types/dompurify": "^3.0.2",
    "@types/node": "20.10.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^23.6.0",
    "electron-updater": "^5.3.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}
