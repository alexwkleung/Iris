{
  "name": "iris",
  "version": "0.3.0-dev.1",
  "productName": "Iris",
  "description": "A comfortable note-taking app powered by Markdown",
  "main": "./out/main.js",
  "type": "module",
  "author": "alexwkleung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexwkleung/Iris/issues"
  },
  "homepage": "https://github.com/alexwkleung/Iris#readme",
  "scripts": {
    "dev": "npm run build && concurrently \"vite serve .\" \"electron .\" \"node ./cli.js\"",
    "build": "vite build && tsc",
    "preview": "vite preview",
    "test": "vitest",
    "electron": "electron .",
    "build:mac-arm64": "npm run build && electron-builder --mac --arm64 --config",
    "build:mac-x64": "npm run build && electron-builder --mac --x64 --config",
    "build:mac-universal": "npm run build && electron-builder --mac --universal --config",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier": "prettier . --write",
    "napi:create": "napi new",
    "update:deps": "npx taze"
  },
  "dependencies": {
    "crelt": "^1.0.6",
    "electron-context-menu": "^3.6.1",
    "electron-window-state": "^5.0.3",
    "fs-mod": "./fs-mod",
    "highlight.js": "^11.9.0",
    "markdown-it": "^14.1.0",
    "prosemirror-commands": "^1.5.2",
    "prosemirror-dropcursor": "^1.8.1",
    "prosemirror-gapcursor": "^1.3.2",
    "prosemirror-history": "^1.3.2",
    "prosemirror-inputrules": "^1.4.0",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-model": "^1.19.4",
    "prosemirror-paste-link": "^1.0.2",
    "prosemirror-schema-list": "^1.3.0",
    "prosemirror-state": "^1.4.3",
    "prosemirror-view": "^1.33.1"
  },
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "@napi-rs/cli": "^2.15.2",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "20.10.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^23.6.0",
    "electron-updater": "^5.3.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}
